<h3>{{title}}</h3>
<div id="error" class="error" hidden>I'm an error</div>
<form method="post" id="removeComment">
    <h3>Comments</h3>
<ul>
  {{#each comments}}
    <li>{{this.name}}: {{this.comment}}</li>
    <form method="post" id="updateComment">
      <input type="hidden" name="commentID" id="commentID" value="{{this._id}}">
      <button type="submit">Delete Comment</button>
    </form>
  {{/each}}
</ul> 
    
</form>